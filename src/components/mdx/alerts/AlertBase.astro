---
import { Icon } from "astro-icon/components";

const { type, icon } = Astro.props;
---

<div role="alert" class={`alert alert-${type} not-prose`} style="margin-top: 1em;">
  <slot name="icon">
    <Icon name={icon} class="shrink-0 w-6 h-6" />
  </slot>
  <span><slot /></span>
</div>

<style>
  /* 直接在组件中添加样式以确保优先级 */
  .alert {
    overflow: visible !important;
  }
  
  .alert > span {
    min-width: 0;
    overflow: hidden;
    width: 100%;
  }
  
  .alert :global(.frosti-code-content) {
    overflow-x: auto !important;
    max-width: 100% !important;
  }
</style>
