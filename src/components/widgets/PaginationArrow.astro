---
import { Icon } from "astro-icon/components";

interface Props {
  direction: "prev" | "next";
  href: string | undefined;
  label: string;
}

const { direction, href, label } = Astro.props;
---

<a
  href={href || "#"}
  class:list={["btn bg-base-100 shadow-xl hover:scale-105 transition-transform duration-300", !href && "btn-disabled"]}
>
  {direction === "prev" && <Icon name="ri:arrow-left-s-line" class="h-6 w-6 md:h-8 md:w-8" />}
  <span class="hidden lg:inline">{label}</span>
  {direction === "next" && <Icon name="ri:arrow-right-s-line" class="h-6 w-6 md:h-8 md:w-8" />}
</a>
