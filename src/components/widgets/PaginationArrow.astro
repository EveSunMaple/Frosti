---
import { Icon } from "astro-icon/components";
import type { PaginationArrowProps } from "@interfaces/data";

const { url, direction, label, target } = Astro.props as PaginationArrowProps;
---

<a href={url || "#"} class:list={["btn bg-base-100 shadow-xl", !url && "btn-disabled"]}>
  {direction === "prev" && <Icon name="ri:arrow-left-s-line" class="h-6 w-6 md:h-8 md:w-8" />}
  <!-- <span class="hidden lg:inline">{url ? `${label} 第${target}页` : label}</span> -->
  <!-- <span class="hidden lg:inline">
    {url
      ? direction === "prev"
        ? `第${target}页 ${label}`
        : `${label} 第${target}页`
      : label}
  </span> -->
  <span class="hidden lg:inline">
    {url
      ? direction === "prev"
        ? `第${target}页`
        : `第${target}页`
      : label}
  </span>
  {direction === "next" && <Icon name="ri:arrow-right-s-line" class="h-6 w-6 md:h-8 md:w-8" />}
</a>
